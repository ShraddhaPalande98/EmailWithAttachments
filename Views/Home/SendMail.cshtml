@model GetMailWithAttachment.Models.EmailViewModel

@{
    ViewData["Title"] = "Send Email";
}

<div class="container">
    <h2 class="my-4">Compose Email</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-9">
            <form asp-action="SendEmail" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="recipient"><strong>To:</strong></label>
                    <input type="email" class="form-control" asp-for="Recipient" placeholder="Enter recipient's email" />
                    <span asp-validation-for="Recipient" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="subject"><strong>Subject:</strong></label>
                    <input type="text" class="form-control" asp-for="Subject" placeholder="Email subject" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="body"><strong>Body:</strong></label>
                    <textarea class="form-control" rows="8" asp-for="Body" placeholder="Compose your message here..."></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="attachment"><strong>Attachments:</strong></label>
                    <input type="file" name="Attachments" class="form-control" asp-for="Attachments" multiple />
                    <span asp-validation-for="Attachments" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Send Email</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .list-group-item {
        border-radius: 0;
    }

    .list-group-item-action {
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #0078d4;
        border-color: #0078d4;
        font-size: 16px;
    }

    .container {
        max-width: 1000px;
        margin-top: 20px;
    }

    .col-md-3 {
        border-right: 1px solid #ddd;
    }

    textarea {
        height: 300px;
    }
</style>
